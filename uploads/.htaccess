# Запрещаем выполнение PHP скриптов в папке uploads
php_flag engine off

# Разрешаем только определенные типы файлов
<FilesMatch "\.(jpg|jpeg|png|gif|webp|bmp|pdf|doc|docx|xls|xlsx|ppt|pptx|txt|csv|zip|rar)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Запрещаем все остальные файлы
<FilesMatch "^(?!.*\.(jpg|jpeg|png|gif|webp|bmp|pdf|doc|docx|xls|xlsx|ppt|pptx|txt|csv|zip|rar)$).*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>